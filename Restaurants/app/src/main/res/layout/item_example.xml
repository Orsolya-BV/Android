<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="415dp">


        <TextView
            android:id="@+id/name_restaurant"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="211dp"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:textColor="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/image_restaurant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image_restaurant"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="71dp"
            android:layout_marginBottom="22dp"
            app:layout_constraintBottom_toTopOf="@+id/Adress_restaurant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_restaurants" />

        <TextView
            android:id="@+id/Adress_restaurant"
            android:layout_width="281dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/phone_restaurant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/phone_restaurant"
            android:layout_width="281dp"
            android:layout_height="40dp"

            android:layout_marginStart="40dp"
            android:layout_marginEnd="21dp"
            android:layout_marginBottom="81dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/favorit_restaurant"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/favorit_restaurant"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="81dp"
            android:src="@drawable/ic_baseline_favorite_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/phone_restaurant" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>