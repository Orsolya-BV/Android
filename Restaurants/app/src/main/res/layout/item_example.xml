<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@color/red">

        <TextView
            android:id="@+id/name_restaurant"
            android:text="@string/title"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/image_restaurant"
            android:layout_width="300dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/ic_restaurants" />

    <TextView
            android:id="@+id/phone_restaurant"
            android:layout_width="281dp"
            android:layout_height="40dp"
        android:textSize="20dp"
        android:text="+40752703742"

            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Adress_restaurant"
            android:layout_width="281dp"
            android:layout_height="40dp"
            android:textSize="20dp"
            android:text="targu mures"/>

        <ImageView
            android:id="@+id/favorit_restaurant"
            android:layout_marginLeft= "20dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_favorite_24" />
    </LinearLayout>


</LinearLayout>